<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>User Profile</h1>
        <hr>
        {{#if orders}}
            <h2>My Orders</h2>
            {{#each orders}}
                <div class="card">
                    <div class="card-body">
                        <ul class="list-group">
                            {{#each this.items}}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="col-10">
                                        <div class="col-6 float-left">
                                            {{this.item.title}}
                                        </div> 
                                        <div class="col-4 float-left">
                                            <span class="badge badge-secondary badge-pill">{{this.qty}} units</span>
                                        </div>
                                    </div>
                                    <span class="badge badge-success badge-pill">${{this.price}}</span>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="card-footer text-white text-right bg-primary">
                        <strong>Total Price - ${{this.cart.totalPrice}}</strong>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <div class="row text-center mx-auto">
                <h2>No Orders found</h2>
            </div>
        {{/if}}
    </div>
</div>